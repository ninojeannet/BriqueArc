<Window x:Class="BriqueArcWPF.login_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BriqueArcWPF"
        mc:Ignorable="d"
        Title="login_window" Height="450" Width="800">
    <Grid>
        <TextBox Name="username" HorizontalAlignment="Left" Height="23" Margin="254,121,0,0" TextWrapping="Wrap"  Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="password" HorizontalAlignment="Left" Height="23" Margin="254,206,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Click="Login" Name="signin" Content="Sign In" HorizontalAlignment="Left" Margin="254,298,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="Register" Name="register" Content="Register" HorizontalAlignment="Left" Margin="401,317,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
